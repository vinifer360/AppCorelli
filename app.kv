<ColetasPedidas>:
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Coletas Pedidas"
            md_bg_color: 5,5,5,0
            specific_text_color: app.theme_cls.primary_color
            pos_hint: {'top': 1}
            elevation: 2
            left_action_items: [["arrow-left-bold-box", lambda x: app.voltar_ver_status()]]

        BoxLayout:
            size_hint_y: None
            height: dp(20)
            padding: dp(0.5)
            spacing: dp(0.5)

            MDTextField:
                id: filtro_data
                hint_text: "Data"
                multiline: False
                mode: "round"
                theme_font_styles: "OVERLINE"
                font_size: "12sp"
                size_hint: (0.005, None)

            MDTextField:
                id: filtro_courier
                hint_text: "Courier"
                multiline: False
                mode: "round"
                theme_font_styles: "OVERLINE"
                font_size: "12sp"
                size_hint: (0.005, None)

            MDRaisedButton:
                text: "Aplicar Filtros"
                theme_font_styles: "OVERLINE"
                font_size: "10sp"
                size_hint: (0.0002, 1.0)
                on_release: root.aplicar_filtros()  # Verifique se aplicar_filtros está implementado em ColetasPedidas

        ScrollView:
            MDList:
                id: lista_coletas
                padding: dp(0.10)
                spacing: dp(0.10)

