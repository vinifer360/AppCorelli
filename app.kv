<LoginScreen>:
    FloatLayout:
        orientation: 'vertical'

        MDTopAppBar:
            md_bg_color: 5,5,5,0
            specific_text_color: app.theme_cls.primary_color
            pos_hint: {'top': 1}
            elevation: 4
            left_action_items: [["arrow-left-bold-box", lambda x: app.callback()]]

        MDLabel:
            text: "Faça o Login para acessar as funções!"
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.62}

        MDTextField:
            id: email
            icon_left: "email"
            hint_text: "Digite o seu E-mail"
            on_focus: True
            validator: "email"
            text_color_normal: "white"
            mode: "line"
            helper_text_mode: "on_focus"
            multiline: False
            size_hint: (0.6, None)
            height: dp(40)
            pos_hint: {'center_x': 0.5, 'center_y': 0.52}

        MDRoundFlatIconButton:
            text: "Login"
            icon: "login"
            size_hint: (0.4, None)
            height: dp(5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.30}
            on_press: root.login()

        MDRoundFlatIconButton:
            text: "Novo Usuário?"
            icon: "account-plus"
            size_hint: (0.4, None)
            height: dp(5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.20}
            on_press: root.cadastrar()

        Label:
            text: "Bem-vindo ao Aplicativo Gestão CorelliLog!"
            size_hint: (1, None)
            height: dp(32)
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1

